<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#383838"
    tools:context="com.houssup.userapp.ThreeStepsActivity">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/back"/>

    <LinearLayout
        android:id="@+id/linearlaylout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/backButton"
        android:orientation="vertical">

        <TextView
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Please Complete the following steps before we"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="could design your home for you"/>
        </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlaylout_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/linearlaylout"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

        <ImageView
            android:id="@+id/fillQuestionnare"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/question"/>

    <com.hanks.library.AnimateCheckBox
        android:id="@+id/itemCheckBox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:checkedColor="#00ff00"
        app:lineColor="#ffffff"
        android:visibility="gone"
        android:layout_marginLeft="30dp"
        android:checked="true"
        android:layout_marginTop="30dp" />
</LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:layout_marginTop="6dp"
            android:text="Fill Questionnare"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/floorPlan"
            android:layout_width="80dp"
            android:clickable="true"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/floorplan"/>

        <com.hanks.library.AnimateCheckBox
            android:id="@+id/itemCheckBox1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:checkedColor="#00ff00"
            app:lineColor="#ffffff"
            android:visibility="gone"
            android:layout_marginLeft="30dp"
            android:checked="true"
            android:layout_marginTop="30dp" />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:text="Upload Floor Plan"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/houseImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/upload_pictures"/>


        <com.hanks.library.AnimateCheckBox
            android:id="@+id/itemCheckBox2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:checkedColor="#00ff00"
            app:lineColor="#ffffff"
            android:visibility="gone"
            android:layout_marginLeft="30dp"
            android:checked="true"
            android:layout_marginTop="34dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:layout_marginTop="6dp"
            android:text="Upload Pictures of House"/>

    </LinearLayout>
        <Button
            android:layout_below="@+id/linearlaylout_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Mood Board"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mood_board_button"
            android:id="@+id/button" />









</LinearLayout>
